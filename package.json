{
  "name": "express-typescript-boilerplate",
  "version": "1.0.0",
  "description": "An Express boilerplate backend",
  "author": "Elhamuddin Mahmoodi",
  "repository": "Elham13/express-ts-template",
  "license": "MIT",
  "main": "index.ts",
  "private": true,
  "scripts": {
    "build": "tsc && tsup",
    "dev": "node --import=tsx --watch src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:cov": "vitest run --coverage",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "7.3.4",
    "bcryptjs": "^3.0.2",
    "cors": "2.8.5",
    "dayjs": "^1.11.13",
    "dotenv": "17.2.0",
    "express": "5.1.0",
    "express-rate-limit": "7.5.1",
    "helmet": "8.1.0",
    "http-status-codes": "2.3.0",
    "mongoose": "^8.16.3",
    "morgan": "^1.10.0",
    "swagger-ui-express": "5.0.1",
    "zod": "3.25.76"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.1",
    "@types/cors": "2.8.19",
    "@types/express": "5.0.3",
    "@types/morgan": "^1.9.10",
    "@types/supertest": "6.0.3",
    "@types/swagger-ui-express": "4.1.8",
    "@vitest/coverage-v8": "3.2.4",
    "supertest": "7.1.3",
    "tsup": "8.5.0",
    "tsx": "4.20.3",
    "typescript": "5.8.3",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "3.2.4"
  },
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "outDir": "dist",
    "format": [
      "esm",
      "cjs"
    ],
    "target": "es2020",
    "sourcemap": true,
    "clean": true,
    "dts": true,
    "splitting": false,
    "skipNodeModulesBundle": true
  },
  "packageManager": "pnpm@10.13.1"
}
